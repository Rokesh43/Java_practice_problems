import java .util.*;
class CountDigit 
{
	static Scanner sc=new Scanner (System.in);
	public static void main(String[] args) 
	{
		System.out.print("Enter the number :");
		int number = sc.nextInt();
		
		int digit=0;
		
		if (number==0)
			digit=1;
		else{
			while (number>0)
			{
				number = number/10;
				digit++;
				
			}
		}
		System.out.println(digit);
		
	}
}
